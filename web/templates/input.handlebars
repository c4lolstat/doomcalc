<div id="content">
<button class="clickable buttonsmall" onclick="doom.setLanguage('en')" value="en" >EN</button>
<button class="clickable buttonsmall" onclick="doom.setLanguage('ru')" value="ru" >RU</button>
<br/>
    <div id="maininput">
        {{#if this.inputerror}}
        <span class="error"><%_inputerror%></span>
        {{/if}}
        <p><label for="summonerName"><%_name%></label><input type="text" id="summonerName" value="{{prename}}" name="summonerName" /></p>
        <p><label for="region"><%_region%> </label><input type="text" id="region" value="{{preregion}}" name="region" /></p>
        <p><input type="checkbox" id="rememberme" ><label for="rememberme"><%_remember%></label></p>
        <button class="clickable button" onclick="doom.eventAgg.trigger('input:getTeam')" value="Match me with retards!" ><%_inputbutton%></button>
    </div>
